      //ajax form
      function ajaxform(){
        function validateEmail(email) {
          var regEmail = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
          return regEmail.test(email);
        }
        $(document).ready(function() {
          $('#contactform').submit(function(e) {
            var name = $('#name')
            var email = $('#email')
            var message = $('#message')

            if(validateEmail(email.val()) == false) { $('#email').addClass('error'); } else { $('#email').removeClass('error'); }
            if (name.val().length < 4){ $('#name').addClass('error'); } else { $('#name').removeClass('error'); }
            if (message.val().length < 4){ $('#message').addClass('error'); } else { $('#message').removeClass('error'); }
            if (validateEmail(email.val()) == true && name.val().length > 3 && message.val().length > 3){
              $('#contactform').fadeOut(500);
              $('.alerttrue').delay(500).fadeIn(800);
              $.ajax({
                method:'POST',
                url:'https://formspree.io/sebastiaan.vanhoecke@hotmail.be',
                data:{
                  name:name.val(),
                  email:email.val(),
                  message:message.val(),
                },
                datatype:'json',
                success:function(){
                  console.log('success'); 
                }
              });
              e.preventDefault();
              $(this).get(0).reset();
            }
            e.preventDefault();
          });
        });
      }
